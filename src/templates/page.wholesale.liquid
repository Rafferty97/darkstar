<div class="subpage-banner">
  <div class="page-width"><h1>{{ page_title }}</h1></div>
</div>

<div class="about-sections">
  <ul class="submenu">
    <li><a href="#coffee-supply">Coffee Supply</a></li>
    <li><a href="#equipment">Equipment</a></li>
    <li><a href="#training">Training</a></li>
    <li><a href="#contact">Contact</a></li>
  </ul>
  
  <div class="page-width">
    {{ page.content }}
  </div>
</div>

<div style="padding: 1px 0; border-top: 1px solid #e0e0e0; margin-top: 60px;">
  <div class="page-width" id="contact">

    {% form 'contact' %}

      <h3>Get in touch</h3>

      {% if form.posted_successfully? %}
        <p class="form-success">
          {{ 'contact.form.post_success' | t }}
        </p>
      {% endif %}

      {{ form.errors | default_errors }}

      <div class="fields-wrap">

      <div class="field-wrap">
        <label for="ContactFormName">{{ 'contact.form.name' | t }}</label><input type="text"
          name="contact[name]"
          id="ContactFormName"
          value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
      </div>

      <div class="field-wrap">
        <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label><input type="email"
          name="contact[email]"
          id="ContactFormEmail"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">
      </div>
          
      <div class="field-wrap">
        <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label><input type="tel"
          name="contact[phone]"
          id="ContactFormPhone"
          value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          pattern="[0-9\-]*">
      </div>

      <div class="field-wrap" style="flex: 0 1 100%;">
        <label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label><textarea rows="10"
          name="contact[body]"
          id="ContactFormMessage">{% if form.body %}
            {{ form.body }}
          {% endif %}</textarea>
      </div>

      <div class="field-wrap" style="flex-grow: 0;">
        <label>&nbsp;</label>
        <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
      </div>

      </div>

    {% endform %}

  </div>
</div>